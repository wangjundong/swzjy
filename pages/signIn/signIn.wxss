/* pages/signIn/signIn.wxss */
page{width: 100%;height: 100%;}
.container{background-color: #e8c65a;width: 100%;height: 100%;overflow: hidden;}
.top{padding: 0 60rpx 0 72rpx;height: 365rpx;display: flex;justify-content: space-between;align-items: center;}
.top text{font-size: 48rpx;color: #ffffff;}
.top image{width: 104rpx;height: 104rpx;margin-top: -170rpx;}
.sign{padding: 60rpx 80rpx 0 150rpx;height: calc(100% - 265rpx);background-color: #ffffff;border-radius: 100rpx 100rpx 0 0;margin-top: -100rpx;display: flex;flex-direction: column;}
.title{font-size: 40rpx;font-weight: 600;margin-left:-60rpx;margin-bottom: 60rpx;}
.time{width: 400rpx;display: flex;margin-bottom: 40rpx;}
.maohao{width: 40rpx;display: block;height: 200rpx;}
.hour{width: calc((100% - 40rpx) / 2); display: block;height: 200rpx;} 
.minute{width: calc((100% - 40rpx) / 2);display: block;height: 200rpx;}
.txt{transform: scale(0.9);color: #a3a3a3;margin-left: 15rpx;}
.selected{transition: all 0.6s;transform: scale(1);color:#000000;font-size: 56rpx;}
.item{display: flex;align-items: center;justify-content: flex-start;}
.btn{width: 219rpx;height: 68rpx;color: #ffffff;font-size: 48rpx;display: flex;justify-content: center;align-items: center;background-color: #e07e23;border-radius: 35rpx;position: absolute;left: calc(50% - 110rpx);top: 1100rpx;z-index: 2;}
