/* pages/teacherList/teacherList.wxss */
page{width: 100%;min-height: 100%;}
.container{width: 100%;height: 100%;padding: 0;margin: 0;}
.swiper{width: 100%;height: 620rpx;}
.li{
  width: 100%;
  height: 620rpx;
}
.li1{
  width: 427rpx;
  margin: 0 auto;
  height: 620rpx;
  transform: scale(0.6);
}
.selected{
  transition: all 0.6s;
  transform: scale(1);
}
.team{display: flex;justify-content: flex-end;align-items: flex-end;flex-direction: column;margin: 10rpx 20rpx 10rpx 0;}
.teacher_team{width: 169rpx;height: 42rpx;}
.teacher_team_en{width: 215rpx;height: 36rpx;}
.desc{width:427rpx;display: flex;font-size: 24rpx;margin: 0 auto;flex-direction: column;}
.word1{width: 265rpx;margin-bottom: 15rpx;}
.word2{margin-bottom: 20rpx;}
.avatar{position: absolute;right: 180rpx;top: 640rpx;display: flex;justify-content: center;align-items: center;flex-direction: column;}
.avatar image{width: 144rpx;height: 144rpx;}
.avatar text{font-size: 40rpx;font-weight: bold;}
.enter{width: 427rpx;height: 79rpx;background-color: #e8c65a;margin: 0 auto;font-size: 40rpx;font-family: sans-serif;text-align: center;line-height: 79rpx;border-radius: 50rpx;color:#ffffff;font-weight: bold;margin-bottom: 40rpx;}

