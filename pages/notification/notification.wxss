/* pages/notification/notification.wxss */
page{width: 100%;height: 100%;}
.container{background-color: #e8c65a;width: 100%;height: 100%;overflow: hidden;}
.top{padding: 0 60rpx 0 72rpx;height: 365rpx;display: flex;align-items: center;justify-content: space-between;}
.logo{width: 163rpx;height: 163rpx;margin-top: -80rpx;}
.userinfo{display: flex;flex-direction: column;font-size: 38rpx;color: #ffffff;}
.sign{height: calc(100% - 265rpx);background-color: #ffffff;border-radius: 100rpx 100rpx 0 0;margin-top: -100rpx;display: flex;flex-direction: column;padding: 60rpx 98rpx 0 98rpx;}
.title{font-size: 40rpx;font-weight: 600;margin-left: 60rpx;margin-bottom: 60rpx;}
.swiper{display: flex;flex-direction: column;height: 750rpx;}
.item{display: flex;justify-content: space-between;}
.time{display: flex;flex-direction: column;font-size: 30rpx;}
.time .empty{width: 160rpx;height: 7rpx;background-color: #e5e5e5;border-radius: 20rpx;}
.msg{display: flex;flex-direction: column;width: 344rpx;height: 248rpx;border-radius: 25rpx;}
.ntf{margin: 20rpx 0 20rpx 40rpx;}
.message{height: 135rpx;margin: 0 20rpx;font-size: 24rpx;color:#ffffff;width: 90%;}