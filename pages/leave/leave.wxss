/* pages/leave/leave.wxss */
page{width: 100%;height: 100%;}
.container{background-color: #e8c65a;width: 100%;height: 100%;overflow: hidden;}
.top{padding: 0 60rpx 0 72rpx;height: 365rpx;display: flex;justify-content: space-between;align-items: center;}
.top text{font-size: 48rpx;color: #ffffff;}
.top image{width: 104rpx;height: 104rpx;margin-top: -170rpx;}
.sign{height: calc(100% - 265rpx);background-color: #ffffff;border-radius: 100rpx 100rpx 0 0;margin-top: -100rpx;display: flex;flex-direction: column;justify-content: flex-start;align-items: center;}
.title{font-size: 40rpx;font-weight: 600;margin-left:-460rpx;margin-bottom: 60rpx;margin-top: 150rpx;}
.btn{width: 219rpx;height: 68rpx;color: #ffffff;font-size: 48rpx;display: flex;justify-content: center;align-items: center;background-color: #e07e23;border-radius: 35rpx;position: absolute;left: calc(50% - 110rpx);top: 1100rpx;z-index: 2;}
.form{background-color: #e5e5e5;}
textarea{width: 556rpx;height: 422rpx;font-size: 28rpx;text-align: justify;}