/* pages/schedule/schedule.wxss */
page{width: 100%;height: 100%;overflow: hidden;}
.container{width: 100%;height: 100%;background-color: #e8c65a;padding-top: 15rpx;}
.top{width: 580rpx;margin:0rpx 0 40rpx 100rpx;display: flex;justify-content: space-between;align-items: center;color:#ffffff;font-size: 40rpx;}
.top text{width: 200rpx;}
.top image{width: 102rpx;height: 102rpx;}
.footer{background-color: #eddfb0;border-radius: 100rpx 100rpx 0 0;height: calc(100% - 710rpx);margin-top: 40rpx;display: flex;padding: 0 116rpx;flex-direction: column;}
.today{font-size: 48rpx;color: #ffffff;font-weight: 600;margin-top: 30rpx;margin-left: 30rpx;}
.swiper{display: flex;}
.item{margin-top: 100rpx;display: flex;}
.item-l{display: flex;justify-content: center;align-items: center;flex-direction: column;font-size: 34rpx;color: #fcce4e;width: 192rpx;height: 201rpx;border-radius: 35rpx;background-color: #ffffff;}
.item-r{display: flex;width: 373rpx;height: 201rpx;background-color: #ffffff;border-radius: 35rpx;flex-direction: column;justify-content: center;align-items: center;}
.course{font-size: 29rpx;color: #fbbd04;margin-bottom: 10rpx;width: 80%;max-height: 100rpx;text-align: justify;}
.name{display: flex;font-size: 24rpx;color: #fbc21e;}
.teacher{margin-right: 40rpx;}