/* pages/activities/activities.wxss */
.top{width: 100%;height: 517rpx;background-image: linear-gradient(#f8e096, #ffffff);padding-top: 49rpx;}
.search{width: 592rpx;margin: 0 auto;height: 40rpx;color:#ffffff;font-size: 30rpx;line-height: 40rpx;background-color: #f6dc87;border: 1px solid rgba(255,255,255,0.4);padding-left: 40rpx;border-radius: 10rpx;}
.title{display: flex;padding: 40rpx 0 30rpx 38rpx;flex-direction: column;font-size: 36rpx;font-weight: 600;}
.swiper{width: 100%;height: 245rpx;}
.li{
  width: 100%;
  height: 245rpx;
}
.li1{
  width: 100%;
  height: 245rpx;
  transform: scale(0.6);
}
.selected{
  transition: all 0.6s;
  transform: scale(1);
}
.msg{padding: 0 54rpx;display: flex;align-items: center;margin-bottom: 20rpx;}
.msg-l{display: flex;flex-direction: column;width: 100rpx;border-right: 1px solid #000000;height: 67rpx;}
.msg-r{display: flex;justify-content: flex-start;align-items: flex-start;flex-direction: column;font-size: 24rpx;margin-left: 20rpx;}
.swiper1{width: 530rpx;height: 80rpx;}
.empty{width: 100%;height: 30rpx;background-color: #fafafa;}
.hd-item{padding:20rpx 63rpx;position: relative;}
.hd-item>image{width: 624rpx;height: 365rpx;}
.go{width: 80rpx;height: 80rpx;background-color: #d11478;display: flex;justify-content: center;align-items: center;position: absolute;left: 63rpx;top: 20rpx;}
.go image{width: 41rpx;height: 41rpx;}