/* pages/school_desc/school_desc.wxss */
.container{height: 100%;width: 100%;}
.swz{width: 130rpx;height: 46rpx;color: #333333;border-radius: 0 30rpx 30rpx 0;background-color: #e8c65a;text-align: left;margin-bottom: 20rpx;line-height: 46rpx;padding-left: 70rpx;}
.theart{width: 400rpx;height: 46rpx;color: #333333;border-radius: 0 30rpx 30rpx 0;background-color: #e8c65a;display: flex;justify-content: flex-start;align-items: center;padding-left: 70rpx;}
.theart image{width: 369rpx;height: 23rpx;}
.introduction{width: 220rpx;height: 53rpx;margin-top: 60rpx;margin-left: 40rpx}
.introduction_en{width: 460rpx;height: 42rpx;margin-top: 20rpx;margin-left: 40rpx}
.introduction_p{display: flex;flex-direction: column;}
.video{width: 690rpx;height: 400rpx;margin: 40rpx auto 0 auto;background-color: blueviolet;}
.content{width: 690rpx;margin: 0 30rpx;display: inline-block;font-size: 32rpx;text-align: justify;margin-bottom: 40rpx;}
.school{margin-left: 103rpx;display: flex;flex-direction: column;width: 330rpx;}
.schooldistrict{width: 213rpx;height: 52rpx;}
.schooldistrict-en{width: 329rpx;height: 39rpx;margin: 20rpx 0 60rpx 0;}
/* 轮播图 */
.li{
  width: 100%;
  height: 252rpx;
}
.li1{
  width: 446rpx;
  margin: 0 auto;
  height: 252rpx;
  transform: scale(0.7);
}
.selected{
  transition: all 0.6s;
  transform: scale(1);
}
.border30{border-radius: 80rpx;}
.school-name{font-size: 38rpx;color: #000000;font-weight: bold;text-align: center;font-family: sans-serif;letter-spacing: 4rpx;}
.yuanxin{display: flex;text-align: center;width: 100%;justify-content: center;align-items: center;margin-top: 40rpx;}
.yx{width: 24rpx;height: 24rpx;border-radius: 50%;border:1px solid #999999;}
.yx-selected{width: 30rpx;height: 30rpx;border-radius: 50%;border: none;background-color: #e8c65a;}
.csr-p{margin-left: 103rpx;display: flex;flex-direction: column;margin-top: 40rpx;}
.csr{width: 269rpx;height: 51rpx;}
.csr-en{width: 444rpx;height: 49rpx;margin-top: 20rpx;}
.desc{display: flex;margin-top: 20rpx;margin-left: 65rpx;margin-bottom: 60rpx;}
.desc-l{width: 214rpx;height: 279rpx;margin-top: 40rpx;}
.desc-r{display: flex;flex-direction: column;font-size: 28rpx;color: #000000;font-family: sans-serif;margin-left: 20rpx;width: 420rpx;}
.name{width: 150rpx;height: 60rpx;background-color: #e8c65a;border-radius: 20rpx;color: #000000;font-size: 36rpx;font-weight: bold;line-height: 60rpx;text-align: center;}
.title{font-size: 22rpx;display: flex;flex-direction: column;margin-top: 20rpx;font-weight: bold;}
