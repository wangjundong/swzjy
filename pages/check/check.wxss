/* pages/check/check.wxss */
page{width: 100%;height: 100%;overflow: hidden;}
.container{width: 100%;height: 100%;background-color: #e8c65a;padding-top: 15rpx;}
.top{width: 580rpx;margin:0rpx 0 40rpx 100rpx;display: flex;justify-content: space-between;align-items: center;color:#ffffff;font-size: 40rpx;}
.top text{width: 200rpx;}
.top image{width: 102rpx;height: 102rpx;}
.footer{background-color: #ffffff;border-radius: 100rpx 100rpx 0 0;height: calc(100% - 710rpx);margin-top: 40rpx;display: flex;padding: 0 116rpx;flex-direction: column;}
.today{font-size: 36rpx;color: #000000;font-weight: 600;margin-top: 40rpx;}
.item{display: flex;justify-content: space-around;align-items: center;margin-top: 100rpx;}
.t1{font-size: 36rpx;color: #000000;margin-right: 20rpx;font-weight: 600;}
.t2{width: 250rpx;height: 4rpx; background-color: #dedede;margin-right: 20rpx;}
.t3{width: 100rpx;background-color: #ef6d40;border-radius: 25rpx;text-align: center;color: #ffffff;font-size: 24rpx;font-weight: 600;}